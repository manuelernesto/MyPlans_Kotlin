<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/bg_color"
        android:layout_height="match_parent"
        tools:context=".controll.NewActivity">


    <LinearLayout
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="198dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_marginLeft="32dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp">

                <TextView
                        android:textSize="32sp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/title_tv"
                        android:textColor="@color/colorAccent"
                        android:text="@string/new_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/averia_libre_light"/>

                <TextView
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/subtitle_tv"
                        android:textColor="@color/colorAccentLitle"
                        android:text="@string/write_here"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/averia_libre_light"/>

            </LinearLayout>


        </LinearLayout>


        <View
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="#ccc"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

    </LinearLayout>


    <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/bgcorner"
            android:paddingBottom="22dp"
            android:paddingTop="22dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:text="Add Plan Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:textColorHint="@color/colorAccentLitle"
                    android:background="@drawable/bginput"
                    android:hint="What's your plan?"
                    android:id="@+id/add_plan_title"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:text="Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:textColorHint="@color/colorAccentLitle"
                    android:background="@drawable/bginput"
                    android:hint="Tell about your plan!"
                    android:id="@+id/add_plan_desc"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorAccent"
                    android:text="When?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:textColorHint="@color/colorAccentLitle"
                    android:background="@drawable/bginput"
                    android:hint="When you will get?"
                    android:id="@+id/add_plan_time"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"/>
        </LinearLayout>

    </LinearLayout>


    <Button
            android:fontFamily="@font/averia_libre_light"
            android:id="@+id/btnNew"
            android:textColor="@android:color/white"
            android:background="@drawable/btnnewplan"
            android:textAllCaps="false"
            android:text="Create New"
            android:textSize="22sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

    <Button
            android:fontFamily="@font/averia_libre_light"
            android:id="@+id/btnCancel"
            android:background="@drawable/btncalcel"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="Cancel"
            android:textSize="22sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>


    <ProgressBar
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            android:id="@+id/progress_new"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"/>


</LinearLayout>